{
    "version": 1,
    "disable_existing_loggers": false,

    "formatters": {
        "basic": {
            "format": "[%(asctime)s.%(msecs)03d %(levelname)-8.8s] %(process)6d %(name)-30.30s %(funcName)-20.20s %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "long": {
            "format": "[%(asctime)s.%(msecs)03d %(levelname)-8.8s] %(process)6d %(name)-30.30s %(filename)-20.20s line:%(lineno)-4d %(processName)-20.20s func:%(funcName)-20.20s %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "basic",
            "stream": "ext://sys.stdout"
        },
        "error_fh": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "long",
            "filename": "_errors.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        },
        "influx_fh": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "_influx.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8" 
        },
        "mqtt_fh": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "_mqtt.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8" 
        },
        "efergygw_fh": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "long",
            "filename": "_efergygw.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        },
        "efergy_fh": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "long",
            "filename": "_efergy.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console", "error_fh"]
    },

    "loggers": {
        "__main__": {
            "level": "INFO",
            "handlers": ["console"],
            "propagate": false
        },
        "efergygw": {
            "level": "INFO",
            "handlers": ["efergygw_fh"],
            "propagate": true
        },
        "efergy": {
            "level": "DEBUG",
            "handlers": ["efergy_fh"],
            "propagate": true
        },
        "influx": {
            "level": "INFO",
            "handlers": ["influx_fh"],
            "propagate": true
        },
        "mqtt": {
            "level": "DEBUG",
            "handlers": ["mqtt_fh"],
            "propagate": true
        },
        "mixin": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "asyncio": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "apscheduler": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "aioinflux": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "aiohttp": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "aiodns": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        },
        "aiomqtt": {
            "level": "WARN",
            "handlers": ["console"],
            "propagate": false
        }
    }
}